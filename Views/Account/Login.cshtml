@{
    ViewBag.Title = "Login";
}
<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #4B2E2E;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        background: beige;
        padding: 40px 30px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgb(202, 171, 0);
        width: 520px; /* wider */
        height: 550px; /* taller */
        transition: transform 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .login-card:hover {
            transform: scale(1.05);
        }

        .login-card h2 {
            color: #4B2E2E;
            margin-bottom: 30px;
            text-align: center;
            font-size: 45px;
            font-weight: bold;
            /*text-shadow: 2px 2px 5px rgb(202, 171, 0);*/
        }

        .login-card form {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        .login-card input {
            width: 400px; /* Increased input width */
            padding: 12px;
            margin: 10px 0;
            border-radius: 8px;
            font-size: 1rem;
            border: 1px solid #ccc;
            transition: 0.3s;
            box-sizing: border-box;
        }

            .login-card input:focus {
                border: 1px solid #4B2E2E;
                box-shadow: 0 0 8px rgb(202, 171, 0);
                outline: none;
            }

    .login-btn {
        width: 100px; /* Compact button width */
        padding: 12px;
        margin-top: 20px;
        background-color: #4B2E2E;
        color: #F5F5DC;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 0 5px rgb(202, 171, 0);
    }

        .login-btn:hover {
            box-shadow: 0 0 15px 4px rgb(202, 171, 0);
        }

    .login-card .link {
        margin-top: 25px;
        text-align: center;
        font-size: 0.9rem;
    }

        .login-card .link a {
            color: #4B2E2E;
            text-decoration: none;
            font-weight: bold;
        }

            .login-card .link a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-container">
    <div class="login-card">
        <h2>Login</h2>
        <form action="/Account/Login" method="post">
            <input type="email" name="Email" placeholder="Email" required />
            <input type="password" name="Password" placeholder="Password" required />
            <button type="submit" class="login-btn">Login</button>

            @* Show error or success messages *@
            @if (ViewBag.Message != null)
            {
                <p style="color: red;">@ViewBag.Message</p>
            }
            @if (TempData["Success"] != null)
            {
                <p style="color: green;">@TempData["Success"]</p>
            }
        </form>

        <div class="link">
            Don't have an account? <a href="/Account/Register">Register here</a>
        </div>
    </div>
</div>
